{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@uploads/*": ["uploads/*"],
      "@middleware/*": ["middleware/*"],
      "@service/*": ["service/*"],
      "@repositories/*": ["repositories/*"],
      "@utils/*": ["utils/*"],
      "@bullBoard/*": ["bullBoard/*"],
      "@workers/*": ["workers/*"],
      "@assets/*": ["assets/*"],
      "@models/*": ["models/*"]
    }
  },
  "exclude": ["__tests__", "**/*.test.ts", "**/*.spec.ts"]
}
